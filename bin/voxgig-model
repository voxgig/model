#!/usr/bin/env node

const { parseArgs } = require('node:util')
const Fs = require('node:fs')
const Path = require('node:path')

const Pkg = require('../package.json')
const { Model } = require('../dist/model.js')

const { Jsonic } = require('jsonic')
const { Gubu, Fault, One } = require('gubu')


let KONSOLE = console

run()


async function run() {
  try {
    let options = resolveOptions()

    if(options.version) {
      version()
    }

    if(options.help) {
      help()
    }

    if(options.version || options.help) {
      exit()
    }

    options = validateOptions(options)

    await generate(options)
  }
  catch(err) {
    handleError(err)
  }
}


function resolveOptions() {

  const args = parseArgs({
    allowPositionals: true,
    options: {
      model: {
        type: 'string',
        short: 'm',
        default: '',
      },
      
      watch: {
        type: 'boolean',
        short: 'w',
      },
      
      debug: {
        type: 'string',
        short: 'g',
        default: 'info'
      },
      
      dryrun: {
        type: 'boolean',
        short: 'y',
      },

      // Pass jsonic-defined data to build scripts
      build: {
        type: 'string',
        short: 'b',
        default: ''
      },
      
      help: {
        type: 'boolean',
        short: 'h',
      },
      
      version: {
        type: 'boolean',
        short: 'v',
      },
      
    }
  })

  const options = {
    model: '' === args.values.model ? args.positionals[0] : args.values.model,
    watch: !!args.values.watch,
    debug: args.values.debug,
    dryrun: args.values.dryrun,
    build: args.values.build,
    help: !!args.values.help,
    version: !!args.values.version,
  }

  return options
}


function validateOptions(rawOptions) {
  const optShape = Gubu({
    model: Fault('The first command line argument must be the model file path.', String),
    watch: Boolean,
    debug: One(String,Boolean),
    dryrun: false,
    buildargs: '',
    help: Boolean,
    version: Boolean,
  })

  const err = []
  const options = optShape(rawOptions,{err})

  if(!err[0]) {
    try {
      options.buildargs = Jsonic(options.build)
    }
    catch(je) {
      err[0] = je
      je.text = je.message.split('\n')[0]
    }
  }
  
  if(err[0]) {
    const errtext = 'ERROR: '+err.map(err=>err.text).join('\n')
    console.error(errtext)
    exit(1)
  }

  return options
}


async function handleError(err) {
  KONSOLE.error(err)
  exit(err)
}


function version() {
  KONSOLE.log(Pkg.version)
}


function help() {
  const s = 'TODO'
  KONSOLE.log(s)
}


function exit(err) {
  let code = 0
  if(err) {
    code = 1
  }
  process.exit(code)
}


async function generate(options) {
  let path = options.model

  if(!Fs.existsSync(path)) {
    console.error('ERROR: model file does not exist: '+(path.replace(process.cwd(),'.')))
    exit(1)
  }
                 
  let fstats = Fs.statSync(path)
  let base = Path.resolve(path)

  if (fstats.isFile()) {
    let basedesc = Path.parse(base)
    base = basedesc.dir
  }

  path = Path.resolve(path)

  let spec = {
    path,
    base,
    require: process.cwd(),
    debug: options.debug,
    dryrun: options.dryrun,
    build: options.build,

    // TODO: read more complex options from elsewhere?
    watch: {
      mod: true,
      add: true,
      rem: true,
    }
  }

  let model = new Model(spec)

  if(options.watch) {
    model.start()
  }
  else {
    await model.run()
  }
}

