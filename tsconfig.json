{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019",
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
